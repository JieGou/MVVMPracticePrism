<UserControl x:Class="MVVMPracticePrism.Views.MessageSender"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"  
             xmlns:hc="https://handyorg.github.io/handycontrol"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <GroupBox Header="This is Sender View" Margin="10">
        <StackPanel>
            <hc:TextBox hc:InfoElement.Placeholder="Write Message..." Text="{Binding Message}" />
            <Button Margin="10" Content="Send Message" Command="{Binding SendCommand}" />
        </StackPanel>
    </GroupBox>
</UserControl>
